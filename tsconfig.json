{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", // Change this to an allowed value
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true, // Enable this flag
    "allowSyntheticDefaultImports": true, // Enable this flag
    "skipLibCheck": true
  },
  "include": ["src", "server"],
  "exclude": ["node_modules", "dist"]
}